{
    "name": "wizardloong/whatsapp-stream-encryption",
    "description": "PSR-7 stream decorators for WhatsApp-style encryption and decryption",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Victor Miroliubov",
            "email": "w.izard@outlook.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "psr/http-message": "^2.0",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "guzzlehttp/psr7": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "Wizardloong\\WhatsAppStreamEncryption\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wizardloong\\WhatsAppStreamEncryption\\Tests\\": "tests/"
        }
    }
}